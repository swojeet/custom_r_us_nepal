<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.input :first_name, label: false, placeholder: 'First Name', required: true %>
  </div>

  <div class="field">
    <%= f.input :last_name, label: false, placeholder: 'Last Name', required: true %>
  </div>

  <div class="field">
    <%= f.input :gender, collection: User::GENDER_TYPES, required: true %>
  </div>

  <div class="field">
    <%= f.input :address %>
  </div>

  <div class="field">
    <%= f.input :city %>
  </div>

  <div class="field">
    <%= f.country_select :country %>
  </div>

  <div class="field">
    <%= f.input :phone_number %>
  </div>

  <div class="field">
    <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:year, :month, :day], required: true %>
  </div>

  <div class="field">
    <%= f.input :email, label: false, placeholder: 'Email Address' %>
  </div>

  <div class="field">
    <%= f.input :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
